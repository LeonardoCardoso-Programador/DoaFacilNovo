<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bordas arredondadas -->
    <corners android:radius="16dp" />

    <!-- Gradiente de cor de fundo com transição suave -->
    <gradient
        android:startColor="#ffffff"
        android:centerColor="#f0f0f0"
        android:endColor="#e0e0e0"
        android:angle="45"/>

    <!-- Cor de fundo -->
    <solid android:color="#FFFFFF" />

    <!-- Padding interno -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>

    <!-- Sombra suave -->
    <elevation android:radius="4dp" android:color="#50000000" />

    <!-- Borda -->
    <stroke
        android:color="#CCCCCC"
        android:width="2dp" />
</shape>
