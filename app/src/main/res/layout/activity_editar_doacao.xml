<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Título da Tela -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botão de Voltar -->
            <ImageButton
                android:id="@+id/buttonVoltar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_voltar"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:contentDescription="Voltar" />

            <!-- Título -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Free Food"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Seção de Imagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_dashed_border">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_adicionar"
                android:scaleType="centerInside"
                android:contentDescription="Adicionar Imagem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Adicione até 10 imagens"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Campo Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Título"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Adicione um título"
            android:background="@android:drawable/editbox_background" />

        <!-- Campo Descrição -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Descrição"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Adicione uma descrição"
            android:background="@android:drawable/editbox_background" />

        <!-- Mapa e Localização -->




        <!-- Seletor de Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listado até"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <Spinner
                android:id="@+id/spinnerData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Botão de Submissão -->
        <Button
            android:id="@+id/buttonEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6200EA"
            android:text="Editar"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6200EA"
            android:text="Eliminar"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Status de disponibilidade -->
        <TextView
            android:id="@+id/statusDisponibilidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponível"
            android:textSize="14sp"
            android:textColor="@color/verde"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</ScrollView>
